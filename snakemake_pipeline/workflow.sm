# ------------------------------------------------------------------------------
# Version of Numbat with Smartseq data
# See: https://github.com/kharchenkolab/numbat/issues/60
# ------------------------------------------------------------------------------

rule numbat_preprocessing_smartseq:
	input:
		bam_file = "data/input_{dataset}/list_bam_files_fullpath.txt",
		cell_names = "data/input_{dataset}/matching_sample_names.txt",
		snp_vcf = "data/annotations/genome1K.phase3.SNP_AF5e2.chr1toX.hg38.vcf.gz",
		eagle_gmap = "data/annotations/genetic_map_hg38_withX.txt.gz"
	output:
		df_allele = "results/output_{dataset}/numbat_smartseq/{dataset}_allele_counts.tsv.gz"
	log:
		"logs/numbat_smartseq_preprocessing_{dataset}.log"
	benchmark:
		"benchmarks/numbat_smartseq_preprocessing_{dataset}_benchmark.txt"
	threads: 1
	resources:
		mem_mb = 32000
	params:
		time = "24:00:00",
		ref_panel = "data/annotations/1000G_hg38",
		out_dir = "results/output_{dataset}/numbat_smartseq/"
	shell:
		r"""Rscript scripts/pileup_and_phase.R \
			--label {wildcards.dataset} \
			--samples {wildcards.dataset} \
			--bams {input.bam_file} \
			--barcodes {input.cell_names} \
			--outdir {params.out_dir} \
			--gmap {input.eagle_gmap} \
			--eagle tools/Eagle_v2.4.1/eagle \
			--snpvcf {input.snp_vcf} \
			--paneldir {params.ref_panel} \
			--smartseq \
			--ncores {threads} > {log}
		"""

rule run_numbat_smartseq:
	input:
		count_mat = "data/input_{dataset}/count_matrix.txt",
		annot = "data/input_{dataset}/sample_annotation.txt",
		ref_groups = "data/input_{dataset}/ref_groups.txt",
		df_allele = "results/output_{dataset}/numbat_smartseq/{dataset}_allele_counts.tsv.gz"
	output:
		cnv_expr = "results/output_{dataset}/numbat_smartseq/gexp_roll_wide.tsv.gz"
	log:
		"logs/numbat_smartseq_{dataset}.log"
	benchmark:
		"benchmarks/numbat_smartseq_{dataset}_benchmark.txt"
	threads: 1
	resources:
		mem_mb = 32000
	params:
		time = "48:00:00",
		gamma = "5",
		min_LLR = "5",
		min_cells = "10"
	script:
		"scripts/numbat.R"

